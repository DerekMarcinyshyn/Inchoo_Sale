<config>
    <modules>
        <Inchoo_Sale>
            <version>0.1.6</version>
        </Inchoo_Sale>
    </modules>
    <global>
        <models>
            <inchoo_sale>
                <class>Inchoo_Sale_Model</class>
                <resourceModel>inchoo_sale_resource</resourceModel>
            </inchoo_sale>
            <inchoo_sale_resource>
                <class>Inchoo_Sale_Model_Resource</class>
                <entities>
                    <category>
                        <table>inchoo_sale_categories</table>
                    </category>
                </entities>
            </inchoo_sale_resource>
        </models>
        <blocks>
            <inchoo_sale>
                <class>Inchoo_Sale_Block</class>
            </inchoo_sale>
        </blocks>
        <helpers>
            <inchoo_sale>
                <class>Inchoo_Sale_Helper</class>
            </inchoo_sale>
        </helpers>
        <resources>
            <inchoo_sale_setup>
                <setup>
                    <module>Inchoo_Sale</module>
                    <class>Inchoo_Sale_Model_Resource_Setup</class>
                </setup>
            </inchoo_sale_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <inchoo_sale before="Mage_Adminhtml">Inchoo_Sale_Adminhtml</inchoo_sale>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <inchoo_sale>
                    <file>inchoo_sale.xml</file>
                </inchoo_sale>
            </updates>
        </layout>
    </adminhtml>
    <crontab>
        <jobs>
            <inchoo_sale_update_sale>
                <schedule><cron_expr>0 * * * *</cron_expr></schedule>
                <run><model>inchoo_sale/observer::updateSale</model></run>
            </inchoo_sale_update_sale>
        </jobs>
    </crontab>
</config>
